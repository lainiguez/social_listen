<?xml version="1.0" encoding="utf-8" ?>
<Context>
	<!-- for tomcat deployment -->
  <Resource name="jdbc/openapplicant-ds" auth="Container" type="javax.sql.DataSource"
               maxActive="10" maxIdle="3" maxWait="10000"
               username="@datasource.username@" password="@datasource.password@" driverClassName="com.mysql.jdbc.Driver"
               url="jdbc:mysql://@datasource.server@:@datasource.port@/@datasource.dbname@"/>

</Context>